<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.collections">

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.activties.about.AboutActivity"></activity>
        <activity android:name=".ui.activties.notifications.NotificationsActivity" />
        <activity android:name=".ui.activties.wish_list.WishListActivity" />
        <activity android:name=".ui.activties.orders.OrdersActivity" />
        <activity android:name=".ui.activties.collection.CollectionActivity" />
        <activity
            android:name=".ui.activties.profile.ProfileActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".ui.activties.product_details.ProductDetailsActivity" />
        <activity
            android:name=".ui.activties.home.HomeActivity"
            android:label="@string/title_activity_home">

        </activity>
        <activity
            android:name=".ui.activties.register.RegisterActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.activties.login.LoginActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".ui.activties.start.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>